<h1 align="center">Create new category</h1>

<!-- Later you can re-use the _errors.html.erb using the way below -->
<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Category Name", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %><br/>
    </div>
  </div>
<% end %>
  
<div class="col-xs-4 col-xs-offset-4" align="center">
  [ <%= link_to "Cancel Request & Return to articles listing", articles_path %> ]
</div>
