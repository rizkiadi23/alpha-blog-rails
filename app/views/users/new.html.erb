<h1 align="center">Signup for Alpha Blog</h1>

<!-- Later you can re-use the _errors.html.erb using the way below -->
<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %><br/>
        </div>
      </div>
    <% end %>
      
    <div class="col-xs-4 col-xs-offset-4" align="center">
      [ <%= link_to "Cancel Request & Return to articles listing", articles_path %> ]
    </div>
  </div>
</div>