<h1 align="center">Login</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocompleete: "off", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %><br/>
    </div>
  </div>
<% end %>
  
<div class="col-xs-4 col-xs-offset-4" align="center">
  [ <%= link_to "Cancel Request & Return to articles listing", articles_path %> ]
</div>