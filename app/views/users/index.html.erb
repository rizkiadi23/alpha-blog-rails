<h1 align="center">All Alpha Bloggers</h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="card" style="margin-bottom: 5px;">
      <div class="card-body">
        <%= link_to user.username, user_path(user) %>'s has <%= pluralize(user.articles.count, "article") if user.articles %> 
        <% if logged_in? and current_user.admin? %>
          | <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure want to delete the user and all their articles?" } %>
        <% end %>
      </div>
      
    </div>
  <% end %>
  <%= will_paginate %>
</div>